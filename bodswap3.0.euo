  set %clicky 525
if %skillChosen = Blacksmith
  set %clicky 170
if %skillChosen = Bowcraft
  set %clicky 460
if %skillChosen = Carpentry
  set %clicky 395
if %skillChosen = Cooking
  set %clicky 585
if %skillChosen = Inscription
  set %clicky 555
if %skillChosen = Tailoring
