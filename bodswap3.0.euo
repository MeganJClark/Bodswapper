sub putBodInBook
;=====================================
finditem %bodType C_ , #BACKPACKID
for %i 1 #FINDCNT
{
  finditem %bodType C_ , #BACKPACKID
  exevent drag #FINDID
  wait %shortwait
  exevent dropc %emptyBodBook
  wait %shortwait
  gosub clickOffset 385 425 ;click exit
}
return
